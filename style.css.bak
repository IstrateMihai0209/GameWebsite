div#slideshowcontainer
{
	position:relative;
}

.slides {display:none;}


.dot 
{
	cursor:pointer;
	height:20px;
	width:20px;
	
	background-color:rgb(97, 150, 91);
	-webkit-clip-path: polygon(50% 12%, 83% 12%, 100% 43%, 75% 78%, 56% 100%, 44% 100%, 25% 78%, 0% 43%, 17% 12%);
	clip-path: polygon(50% 12%, 83% 12%, 100% 43%, 75% 78%, 56% 100%, 44% 100%, 25% 78%, 0% 43%, 17% 12%);
	display:inline-block;
	transition:background-color 0.1s ease;
}

.active, .dot:hover {background-color:green;}

.fade
{
	-webkit-animation-name:fade;
	-webkit-animation-duration:0.3s;
	animation-name:fade;
	animation-duration:0.3s;
}

@-webkit-keyframes fade
{
	from {opacity:0.4}
	to {opacity:1}
}

@keyframes fade
{
	from {opacity:0.4}
	to {opacity:1}
}

img.itchimage
{ 
	width:100%;
	height:700px;
	float:left;
	border-radius:10px;
	margin-left:10px;
}

